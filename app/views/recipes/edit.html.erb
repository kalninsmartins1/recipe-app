<%= render 'shared/page_title', title: 'edit recipe' %>

<% if @recipe.errors.any? then %>
  <div class="row">
    <div class="col-md-8 cold-md-offset-2 text-light">
      <div class="card bg-danger">
        <div class="card-heading">
          <h2 class="card-title">
            <%= pluralize(@recipe.errors.count, 'error') %> prevented <% @recipe.class %> to be submitted:
          </h2>
          <div class="card-body">
              <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for @recipe, html: {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group row">
        <div class="control-label col-md-1">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: 'form_control', placeholder: 'Name of recipe', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-md-1">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Enter steps to create recipe" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-10 offset-md-1">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge"%>
        </div>
      </div>
    <% end %>
    <div class="row justify-content-center">
      <div class="col-md-5 colormatch">
        [ <%= link_to "Cancel request and return to recipes listing", recipes_path %> ]
      </div>
    </div>
  </div>
</div>