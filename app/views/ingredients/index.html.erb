<%= render 'shared/page_title', title: "Available ingredients" %>

<div class="container" align="center">
  <%= render 'shared/will_paginate', objects: @ingredients %>
  <% @ingredients.each do |ingredient| %>
    <ul class="listing">
      <div class="row justify-content-center">
        <div class=" card well col-md-4 col-md-offset-4">
          <li class="chef-title"><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
          <li><small><%= pluralize(ingredient.recipes.count, 'recipe') if ingredient.recipes %></small></li>
          <% if current_chef.admin? %>
            <li><%= link_to "Edit ingredient", edit_ingredient_path(ingredient) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= render 'shared/will_paginate', objects: @ingredients %>
</div>