<%= render 'shared/page_title', title: "Chef's chat" %>

<div class="row chat-container">
  <div class="col">
    <div class="messages" id="messages">
      <%= render @messages %>
    </div>
  </div>
</div>
<hr />
<div class="message-container">
  <%= form_for(@message, remote: true, :html => {class: "row form-horizontal",
                                        role: "form"}) do |f| %>
    <%= f.text_area :content, class: "form-control col-md-8",
                                placeholder: "Write a message..." %>
    <div class="col-sm-1">
    </div>
    <%= f.submit "Send", class: 'btn btn-primary col-md-2 align-self-center' %>
  <% end %>
</div>