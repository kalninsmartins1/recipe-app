<%= render 'shared/page_title', title: "Chefs listing" %>

<div class="container" align="center">
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row justify-content-center">
        <div class=" card well col-md-4 col-md-offset-4">
          <li><%= link_to image(150), chef_path(chef) %></li>
          <li class="chef-title"><%= link_to chef.name, chef_path(chef) %></li>
          <li><small><%= pluralize(chef.recipes.count, 'recipe') if chef.recipes %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
</div>