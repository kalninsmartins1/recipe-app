<%= render 'shared/page_title', title: "Chefs listing" %>

<div class="container" align="center">
  <%= render 'shared/will_paginate', objects: @chefs %>
  <% @chefs.each do |chef| %>
    <ul class="listing">
      <div class="row justify-content-center">
        <div class=" card well col-md-4 col-md-offset-4">
          <li><%= link_to image(150), chef_path(chef) %></li>
          <li class="chef-title"><%= link_to chef.name, chef_path(chef) %></li>
          <li><small><%= pluralize(chef.recipes.count, 'recipe') if chef.recipes %></small></li>
          <% if current_chef.admin? %>
            <li><%= link_to "Delete chef", chef_path(chef),
                            method: :delete,
                            data: {confirm: "Are you sure you want to delete this chef and all its recipes?"} %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= render 'shared/will_paginate', objects: @chefs %>
</div>