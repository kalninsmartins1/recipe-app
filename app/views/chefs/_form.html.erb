<div class="row">
  <div class="col-md-12">
    <%= form_for @chef, html: {class: "form-horizontal", role: "form"} do |f| %>
      <div class="form-group row">
        <div class="control-label col-md-1">
          <%= f.label :name %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: 'form_control', placeholder: 'Chef name', autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-md-1">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :email, class: "form-control", placeholder: "placeholder@placeholder.lv" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-md-1">
          <%= f.label :password %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-md-1">
          <%= f.label :password_confirmation %>
        </div>
        <div class="col-md-8">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-10 offset-md-1">
          <%= f.submit(@chef.new_record? ? "Create account" : "Update account",
                       class: "btn btn-primary btn-lg btn-xlarge") %>
        </div>
      </div>
    <% end %>
  </div>
</div>